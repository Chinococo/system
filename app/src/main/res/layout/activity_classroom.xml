<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enter_score"
    android:orientation="horizontal"
    tools:context=".enter_score_screen">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:context=".enter_score_screen">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="345dp"
                android:layout_height="621dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:background="#C6000000"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/common_google_signin_btn_text_dark_disabled" />

            <TextView
                android:id="@+id/out_csv_btn2_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#4818FFFF"
                android:text="輸出檔案"
                android:textColor="#BEFAFAFA"
                android:textSize="25sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/date_picker_enter_score_class"
                app:layout_constraintTop_toBottomOf="@+id/date_picker_enter_score_class" />

            <Button
                android:id="@+id/date_picker_enter_score_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:background="#4769F0AE"
                android:text="日期"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/enter_scorce_btn_class"
                app:layout_constraintTop_toTopOf="@+id/enter_scorce_btn_class" />

            <Spinner
                android:id="@+id/enter_score_spinner2"
                android:layout_width="232dp"
                android:layout_height="43dp"
                android:layout_marginStart="36dp"
                android:background="#BE0B7485"
                app:layout_constraintBottom_toBottomOf="@+id/textView17"
                app:layout_constraintEnd_toEndOf="@+id/position_spinner"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toTopOf="@+id/textView17" />

            <Button
                android:id="@+id/enter_scorce_btn_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="112dp"
                android:background="#3100FFFF"
                android:enabled="true"
                android:text="送出"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintHorizontal_bias="0.532"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/othert_t" />

            <EditText
                android:id="@+id/grade7"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="text"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/garde7_t"
                app:layout_constraintEnd_toEndOf="@+id/other"
                app:layout_constraintTop_toTopOf="@+id/garde7_t" />

            <EditText
                android:id="@+id/other"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="text"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/othert_t"
                app:layout_constraintEnd_toEndOf="@+id/blackboard"
                app:layout_constraintTop_toTopOf="@+id/othert_t"
                app:layout_constraintVertical_bias="0.0" />

            <Spinner
                android:id="@+id/position_spinner"
                android:layout_width="232dp"
                android:layout_height="43dp"
                android:background="#BE0B7485"
                app:layout_constraintBottom_toBottomOf="@+id/textView16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.311"
                app:layout_constraintStart_toEndOf="@+id/textView16"
                app:layout_constraintTop_toTopOf="@+id/textView16" />

            <TextView
                android:id="@+id/floor_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:text="地板"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/floor"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/enter_score_spinner2" />

            <TextView
                android:id="@+id/window_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="窗戶"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/floor_t"
                app:layout_constraintTop_toBottomOf="@+id/floor_t" />

            <TextView
                android:id="@+id/garbage_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="垃圾"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/window_t"
                app:layout_constraintTop_toBottomOf="@+id/window_t" />

            <TextView
                android:id="@+id/desk_chair_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="桌椅"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/garbage_t"
                app:layout_constraintTop_toBottomOf="@+id/garbage_t" />

            <TextView
                android:id="@+id/blackboard_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="黑板"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/desk_chair_t"
                app:layout_constraintTop_toBottomOf="@+id/desk_chair_t" />

            <EditText
                android:id="@+id/floor"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/floor_t"
                app:layout_constraintStart_toEndOf="@+id/floor_t"
                app:layout_constraintTop_toTopOf="@+id/floor_t"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/window"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/window_t"
                app:layout_constraintEnd_toEndOf="@+id/floor"
                app:layout_constraintTop_toTopOf="@+id/window_t"
                app:layout_constraintVertical_bias="0.615" />

            <EditText
                android:id="@+id/garbage"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/garbage_t"
                app:layout_constraintEnd_toEndOf="@+id/window"
                app:layout_constraintTop_toTopOf="@+id/garbage_t"
                app:layout_constraintVertical_bias="0.692" />

            <EditText
                android:id="@+id/desk_chair"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/desk_chair_t"
                app:layout_constraintEnd_toEndOf="@+id/garbage"
                app:layout_constraintTop_toTopOf="@+id/desk_chair_t"
                app:layout_constraintVertical_bias="0.384" />

            <EditText
                android:id="@+id/blackboard"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/blackboard_t"
                app:layout_constraintEnd_toEndOf="@+id/desk_chair"
                app:layout_constraintTop_toTopOf="@+id/blackboard_t"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/othert_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="其他"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/blackboard_t"
                app:layout_constraintTop_toBottomOf="@+id/blackboard_t" />

            <TextView
                android:id="@+id/garde7_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="4dp"
                android:text="查堂成績"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/othert_t"
                app:layout_constraintTop_toBottomOf="@+id/othert_t" />

            <TextView
                android:id="@+id/now_score_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:textColor="#FF0000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <Button
                android:id="@+id/auto_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="滿分"
                app:layout_constraintBottom_toBottomOf="@+id/enter_scorce_btn_class"
                app:layout_constraintEnd_toStartOf="@+id/enter_scorce_btn_class"
                app:layout_constraintTop_toTopOf="@+id/enter_scorce_btn_class" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="地點"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="班級"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>








