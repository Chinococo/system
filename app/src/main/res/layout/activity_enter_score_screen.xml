<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enter_score"
    android:orientation="horizontal"
    tools:context=".enter_score_screen">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:context=".enter_score_screen">

            <Button
                android:id="@+id/enter_scorce_btn_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:background="#3100FFFF"
                android:enabled="true"
                android:text="送出"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/othert_t" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="560dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="#C6000000"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/common_google_signin_btn_text_dark_disabled" />

            <EditText
                android:id="@+id/grade7"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="text"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/othert_t"
                app:layout_constraintStart_toEndOf="@+id/othert_t"
                app:layout_constraintTop_toTopOf="@+id/othert_t"
                app:layout_constraintVertical_bias="0.0" />

            <Spinner
                android:id="@+id/position_spinner"
                android:layout_width="232dp"
                android:layout_height="43dp"
                android:layout_marginTop="48dp"
                android:background="#BE0B7485"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/floor_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="20dp"
                android:text="評1"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/floor"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/position_spinner" />

            <TextView
                android:id="@+id/window_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="評2"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/floor_t"
                app:layout_constraintTop_toBottomOf="@+id/floor_t" />

            <TextView
                android:id="@+id/garbage_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="評3"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/window_t"
                app:layout_constraintTop_toBottomOf="@+id/window_t" />

            <TextView
                android:id="@+id/desk_chair_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="評4"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/garbage_t"
                app:layout_constraintTop_toBottomOf="@+id/garbage_t" />

            <TextView
                android:id="@+id/blackboard_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="評5"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/desk_chair_t"
                app:layout_constraintTop_toBottomOf="@+id/desk_chair_t" />

            <EditText
                android:id="@+id/floor"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/floor_t"
                app:layout_constraintStart_toEndOf="@+id/floor_t"
                app:layout_constraintTop_toTopOf="@+id/floor_t"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/window"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/window_t"
                app:layout_constraintEnd_toEndOf="@+id/floor"
                app:layout_constraintTop_toTopOf="@+id/window_t"
                app:layout_constraintVertical_bias="0.615" />

            <EditText
                android:id="@+id/garbage"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/garbage_t"
                app:layout_constraintEnd_toEndOf="@+id/window"
                app:layout_constraintTop_toTopOf="@+id/garbage_t"
                app:layout_constraintVertical_bias="0.692" />

            <EditText
                android:id="@+id/desk_chair"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/desk_chair_t"
                app:layout_constraintEnd_toEndOf="@+id/garbage"
                app:layout_constraintTop_toTopOf="@+id/desk_chair_t"
                app:layout_constraintVertical_bias="0.384" />

            <EditText
                android:id="@+id/blackboard"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/blackboard_t"
                app:layout_constraintEnd_toEndOf="@+id/desk_chair"
                app:layout_constraintTop_toTopOf="@+id/blackboard_t"
                app:layout_constraintVertical_bias="0.0" />

            <Spinner
                android:id="@+id/opeator"
                android:layout_width="102dp"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:background="#75E040FB"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/date_picker_enter_score"
                app:layout_constraintTop_toBottomOf="@+id/date_picker_enter_score" />

            <TextView
                android:id="@+id/othert_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="備註"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/blackboard_t"
                app:layout_constraintTop_toBottomOf="@+id/blackboard_t" />

            <TextView
                android:id="@+id/out_csv_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#4818FFFF"
                android:text="輸出檔案"
                android:textColor="#BEFAFAFA"
                android:textSize="25sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/opeator"
                app:layout_constraintTop_toBottomOf="@+id/opeator" />

            <TextView
                android:id="@+id/now_score_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:textColor="#FF0000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <Button
                android:id="@+id/date_picker_enter_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4769F0AE"
                android:text="日期"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <Button
                android:id="@+id/auto_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="滿分"
                app:layout_constraintBottom_toBottomOf="@+id/enter_scorce_btn_class"
                app:layout_constraintEnd_toStartOf="@+id/enter_scorce_btn_class"
                app:layout_constraintTop_toTopOf="@+id/enter_scorce_btn_class" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>








