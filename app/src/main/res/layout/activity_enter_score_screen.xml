<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enter_score"
    android:orientation="horizontal"
    tools:context=".enter_score_screen">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:context=".enter_score_screen">

            <Button
                android:id="@+id/enter_scorce_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:background="#3100FFFF"
                android:enabled="true"
                android:text="送出"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/text" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="560dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="#C6000000"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/common_google_signin_btn_text_dark_disabled" />

            <EditText
                android:id="@+id/enter_score_edit6"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="text"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/text"
                app:layout_constraintStart_toEndOf="@+id/text"
                app:layout_constraintTop_toTopOf="@+id/text"
                app:layout_constraintVertical_bias="0.0" />

            <Spinner
                android:id="@+id/enter_score_spinner"
                android:layout_width="232dp"
                android:layout_height="43dp"
                android:layout_marginTop="48dp"
                android:background="#BE0B7485"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/grade1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="20dp"
                android:text="評1"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/enter_score_edit1"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/enter_score_spinner" />

            <TextView
                android:id="@+id/grade2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="評2"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/grade1"
                app:layout_constraintTop_toBottomOf="@+id/grade1" />

            <TextView
                android:id="@+id/grade3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="評3"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/grade2"
                app:layout_constraintTop_toBottomOf="@+id/grade2" />

            <TextView
                android:id="@+id/grade4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="評4"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/grade3"
                app:layout_constraintTop_toBottomOf="@+id/grade3" />

            <TextView
                android:id="@+id/grade5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="評5"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/grade4"
                app:layout_constraintTop_toBottomOf="@+id/grade4" />

            <EditText
                android:id="@+id/enter_score_edit1"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/grade1"
                app:layout_constraintStart_toEndOf="@+id/grade1"
                app:layout_constraintTop_toTopOf="@+id/grade1"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/enter_score_edit2"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/grade2"
                app:layout_constraintEnd_toEndOf="@+id/enter_score_edit1"
                app:layout_constraintTop_toTopOf="@+id/grade2"
                app:layout_constraintVertical_bias="0.615" />

            <EditText
                android:id="@+id/enter_score_edit3"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/grade3"
                app:layout_constraintEnd_toEndOf="@+id/enter_score_edit2"
                app:layout_constraintTop_toTopOf="@+id/grade3"
                app:layout_constraintVertical_bias="0.692" />

            <EditText
                android:id="@+id/enter_score_edit4"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/grade4"
                app:layout_constraintEnd_toEndOf="@+id/enter_score_edit3"
                app:layout_constraintTop_toTopOf="@+id/grade4"
                app:layout_constraintVertical_bias="0.384" />

            <EditText
                android:id="@+id/enter_score_edit5"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#A9C2BFBF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/grade5"
                app:layout_constraintEnd_toEndOf="@+id/enter_score_edit4"
                app:layout_constraintTop_toTopOf="@+id/grade5"
                app:layout_constraintVertical_bias="0.0" />

            <Spinner
                android:id="@+id/opeator"
                android:layout_width="102dp"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:background="#75E040FB"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/date_picker_enter_score"
                app:layout_constraintTop_toBottomOf="@+id/date_picker_enter_score" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="備註"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/grade5"
                app:layout_constraintTop_toBottomOf="@+id/grade5" />

            <TextView
                android:id="@+id/out_csv_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#4818FFFF"
                android:text="輸出檔案"
                android:textColor="#BEFAFAFA"
                android:textSize="25sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/opeator"
                app:layout_constraintTop_toBottomOf="@+id/opeator" />

            <TextView
                android:id="@+id/now_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:textColor="#FF0000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <Button
                android:id="@+id/date_picker_enter_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4769F0AE"
                android:text="日期"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>








